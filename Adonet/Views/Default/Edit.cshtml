@model Adonet.Models.EmployeeModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="~/Default/Edit" method="post">
    <input type="hidden" name="EmpId" class="form-control" value="@Model.EmpId" /><br />
    
    <label>EmpName</label>
    <input type="text" name="EmpName" class="form-control" value="@Model.EmpName" /><br />
    <label>EmpSalary</label>
    <input type="text" name="EmpSalary" class="form-control" value="@Model.EmpSalary" /><br />
    <input type="submit" value="Save" class="btn btn-success" />
</form>