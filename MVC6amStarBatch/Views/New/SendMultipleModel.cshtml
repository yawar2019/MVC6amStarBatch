@model MVC6amStarBatch.Models.EmpDeptModel
@{
    ViewBag.Title = "SendMultipleModel";
}

<h2>SendMultipleModel</h2>

<table class="table-condensed">
    <tr>
        <th>EmpId</th>
        <th>EmpName</th>
        <th>EmpSalary</th>
    </tr>
    @foreach (var item in Model.emp)
    {
        <tr>
            <td>@item.EmpId</td>
            <td>@item.EmpName</td>
            <td>@item.EmpSalary</td>
            <td>
                @Html.ActionLink("Click Me", "ShowEmployee", new { id = @item.EmpId })
            </td>
        </tr>
    }
</table><br />

<table class="table-condensed">
    <tr>
        <th>DeptId</th>
        <th>DeptName</th>
    </tr>
    @foreach (var item in Model.dept)
    {
        <tr>
            <td>@item.DeptId</td>
            <td>@item.DeptName</td>
        </tr>
    }
</table><br />

